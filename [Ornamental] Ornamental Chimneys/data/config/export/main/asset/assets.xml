    <Template>Trigger</Template>
    <Values>
      <Standard>
        <GUID>2141592207</GUID>
        <Name>150 workers reached</Name>
        <IconFilename>data/ui/2kimages/main/profiles/resident_tier04.png</IconFilename>
      </Standard>
      <Trigger>
      <TriggerCondition>
        <Template>ConditionPlayerCounter</Template>
        <Values>
          <Condition />
          <!-- Same as unlock of Bright Harvest worker ornaments -->
          <ConditionPlayerCounter>
            <PlayerCounter>PopulationByLevel</PlayerCounter>
            <Context>15000001</Context>
            <CounterAmount>150</CounterAmount>
          </ConditionPlayerCounter>
        </Values>
      </TriggerCondition>
      <TriggerActions>
        <Item>
          <TriggerAction>
            <Template>ActionUnlockAsset</Template>
